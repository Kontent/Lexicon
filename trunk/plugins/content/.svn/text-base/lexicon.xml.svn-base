<?xml version="1.0" encoding="iso-8859-1"?>
<install version="1.5" type="plugin" group="content">
	<name>Lexicon Plugin</name>
	<author>PlayShakespeare.com</author>
	<creationDate>May 2008</creationDate>
	<copyright>Copyright (C) 2008 PlayShakespeare.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>info@PlayShakespeare.com</authorEmail>
	<authorUrl>http://www.PlayShakespeare.com</authorUrl>
	<version>2.0</version>
	<description><![CDATA[
Lexicon Plugin for Joomla 1.5.x :: 
When used with the Lexicon component, terms in your Articles will have rollover explanations. 
It's important that you set this plugin to load last.
To enable or disable this plugin for single articles,
add either the tag [lexicon=enable] or [lexicon=disable] in the body text of the Article.
To automatically show the Lexicon switcher, add the [lexiconswitch] tag to your page.	
	]]>
	</description>
	<files>
		<filename plugin="lexicon">lexicon.php</filename>
		<filename>lexicon.js</filename>
		<folder>lexicon</folder>
	</files>
	<params>
		<param name="outputmode" type="list" default="0" label="Select ouput mode" description="If you selected Lexicon module you need to install the module: Lexicon Description Box">
			<option value="0">Popup on mouseover</option>
			<option value="4">Popup on mouseover and click</option>
			<option value="3">Popup on click only</option>
			<option value="1">Browser ToolTips</option>
			<!--<option value="2">LexiconBox Module</option>-->
		</param>
		<param name="show_image" type="radio" default="1" label="Show Image" description="If set to yes, a small image will be displayed on generated links.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="find_exact" type="radio" default="1" label="Find exact Terms" description="If set to yes, the bot only searches for the exact term (means that there will be no popup generated for moonwalker if the term is moon). Otherwise, the bot will find terms which are used within other words (a box will be created for the part -moon- in moonwalker.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_once_only" type="radio" default="1" label="Show only first found Term" description="If set to yes, the bot continues with the next term, if a term was found. Otherwise it will create boxes for every time a term was found.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_frontpage" type="radio" default="1" label="Show on Frontpage" description="If set to yes, the popup boxes will also be created on frontpage.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="run_default" type="radio" default="1" label="Run default" description="If set to yes, the bot scans the content automaticly. You can use \{lexiconbot=disable\} in your content to disable it for an article. If set to no, you have to use the command \{lexiconbot=enable\} to enable the bot for an article">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" />

		<param name="fgcolor" type="text" default="#CCCCFF" label="Box forceground color (text)" description="" />
		<param name="bgcolor" type="text" default="#333399" label="Box background color (border and caption)" description="" />
		<param name="txtcolor" type="text" default="#000000" label="Box textcolor" description="" />
		<param name="capcolor" type="text" default="#FFFFFF" label="Box caption textcolor" description="" />
		<param name="width" type="text" default="300" label="Box width" description="Width if the box" />
		<param name="position" type="list" default="BELOW" label="Box position" description="Set the postion of the box to below or above mousepointer">
			<option value="BELOW">BELOW</option>
			<option value="ABOVE">ABOVE</option>
		</param>
		<param name="alignment" type="list" default="RIGHT" label="Box alignment" description="Set alignment of the box from mousepointer">
			<option value="LEFT">LEFT</option>
			<option value="CENTER">CENTER</option>
			<option value="RIGHT">RIGHT</option>
		</param>
		<param name="offset_x" type="text" default="10" label="X Offset" description="How far away from the mousepointer the popup will show up, horizontally" />
		<param name="offset_y" type="text" default="10" label="Y Offset" description="How far away from the mousepointer the popup will show up, vertically" />

		<param name="show_headline" type="text" default="1" label="Show table header" description="When creating a table of used terms, you can define if the table use a header or not" />
		<param name="headline" type="text" default="Nomenclature" label="Text for table headline" description="When creating a table of used terms, you can define if the table use a headline or not" />
		<param name="head_term" type="text" default="Term" label="Text used for term row in table" description="When creating a table of used terms, you can define if the table use a header or not" />
		<param name="head_explanation" type="text" default="Description" label="Text used for description row in table" description="When creating a table of used terms, you can define if the table use a header or not" />
		<param name="css" type="text" default="cursor:help;border-bottom:1px dotted #000000;font-weight:normal;" label="CSS-Style for the term" />
		<param name="offcss" type="text" default="color: #000000;border-bottom:none;text-decoration:none;cursor:text;font-weight:normal;" label="CSS-Style when Lexiconbot off" description="This should match the normal display of content text" />
		<param name="offlink" type="text" default="plugins/content/lexiconbot/icon_off.png" label="Path to image to switch off" description="This text or HTML is displayed as a link for the user to switch off the Lexiconbot display" />
		<param name="onlink" type="text" default="plugins/content/lexiconbot/icon_on.png" label="Path to image to switch on" description="This text or HTML is displayed as a link for the user to switch back on the Lexiconbot display" />
		<param name="offalt" type="text" default="Turn off inline lexicon" label="Alt text for switch off image" />
		<param name="onalt" type="text" default="Turn on inline lexicon" label="Alt text for switch on image" />
		<param name="switchname" type="text" default="Lexicon:" label="Name of Lexiconbot for display" description="The name that will be shown as a label prior to the link to switch on or off" />
	</params>
</install>